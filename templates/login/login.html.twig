                        </button>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-primary py-3 fw-bold rounded-3">
                            Cr√©er un compte
                        </a>
                    </div>
                </form>

                {% if error %}
                    <div class="alert alert-danger mt-4 rounded-3">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="text-center mt-5">
                    <div class="position-relative mb-4">
                        <hr>
                        <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">Ou connectez-vous avec</span>
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                         <!-- Facebook -->
