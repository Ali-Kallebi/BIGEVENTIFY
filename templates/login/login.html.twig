                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" style="background-color: #4e54c8;">
                            <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                        </div>
                    </div>

                    <div class="d-grid gap-3">
                        <button type="submit" class="btn btn-primary py-3 fw-bold rounded-3" 
                                style="background: linear-gradient(to right, #4e54c8, #8f94fb); border: none;">
