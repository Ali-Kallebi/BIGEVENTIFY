                </div>
                
                <form action="{{ path('app_login') }}" method="post" class="needs-validation" novalidate>
                    <div class="mb-4">
                        <label for="email" class="form-label fw-semibold">Adresse e-mail</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-envelope-fill text-muted"></i>
                            </span>
                            <input type="email" id="email" name="_username" class="form-control border-start-0 ps-2 py-3" 
                                   value="{{ last_username }}" required autofocus>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label fw-semibold">Mot de passe</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-lock-fill text-muted"></i>
                            </span>
                            <input type="password" id="password" name="_password" class="form-control border-start-0 ps-2 py-3" required>
